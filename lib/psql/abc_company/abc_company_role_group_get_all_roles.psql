/**
 * Selects all roles in a role group of a company.
 *
 * @param p_cmp_id The ID of the company (safeguard).
 * @param p_rlg_id The ID of the role group.
 *
 * @type rows
 */
create procedure abc_company_role_group_get_all_roles(in p_cmp_id @aut_role.cmp_id%type@,
                                                      in p_rlg_id @aut_role.rlg_id%type@)
reads sql data
begin
  select rol_id
  ,      rol_weight
  ,      rol_name
  from  AUT_ROLE
  where cmp_id = p_cmp_id
  and   rlg_id = p_rlg_id
  order by rol_weight
  ;
end
